# Shell prompt customization

function parse_git_branch () {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

###### COLORS
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
LIGHT_BLUE="\[\033[0;29m\]"
PINK="\[\033[1;31m\]"

PS1="$PINK ❤ $RED \w$YELLOW\$(parse_git_branch)$LIGHT_BLUE "
export PS1;

PS2="\[${yellow}\]→ \[${reset}\]";
export PS2;
